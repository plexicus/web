---
import CTASection from "@/components/CTA/section";
import Layout from "@/layouts/Layout.astro";
import SolutionCore from "@/components/Solution/Core.astro";
import SolutionHero from "@/components/Solution/Hero.astro";
import SolutionList from "@/components/Solution/List.astro";

/**
 * Utils
 */
import type { Solution } from "@/types/solution";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

/**
 * Variables
 */
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const solutions = t("solutions.items") as { title: string; description: string }[];
const industrySolutions = t("solutions.list") as Solution[];
---

<Layout title="Solutions | Plexicus">
  <SolutionHero />
  <SolutionCore solutions={solutions} />
  <SolutionList solutions={industrySolutions} />
  <CTASection 
    title={"Need a Customized Solution?"} 
    description={"Our team of experts can help you design a security and compliance solution tailored to your specific needs."} 
    buttonText={"Contact Us"} 
    buttonLink={"/contact"}
    client:load
  />
</Layout>