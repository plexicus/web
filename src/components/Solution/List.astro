---
import Link from "@/components/ui/link";
import type { Solution } from "@/types/solution";

interface Props {
  solutions: Solution[];
}

const { solutions } = Astro.props;
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center">Industry Solutions</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {solutions.map(solution => (
        <Link href={`/solutions/${solution.detail.slug}`}>
          <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 flex items-start gap-4">
            <div class="bg-purple-100 p-3 rounded-lg">
              <span class:list={"text-purple-600"}></span>
            </div>
            <div>
              <h3 class="text-xl font-semibold mb-2 group-hover:text-purple-600 transition-colors">{solution.title}</h3>
              <p class="text-gray-600">{solution.description}</p>
            </div>
          </div>
        </Link>
      ))}
    </div>
  </div>
</section>