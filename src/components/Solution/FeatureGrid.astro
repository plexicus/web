---
import IconsInfoCircle from "@/components/icons/info-circle";

interface Feature {
  title: string;
  description: string;
}

interface Props {
  title: string;
  features: Feature[];
}

const { title, features } = Astro.props;
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center">{title}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {features.map(feature => (
        <div class="bg-white p-6 rounded-lg shadow-sm flex items-start gap-4">
          <div class="bg-purple-100 p-3 rounded-lg">
            <span class:list={"text-purple-600"}>
              <IconsInfoCircle />
            </span>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>