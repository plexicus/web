---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonLink: string;
  image: string;
}

const { title, description, buttonText, buttonLink, image } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center gap-12">
      <div class="md:w-1/2">
        <h2 class="text-3xl font-bold mb-6">{title}</h2>
        <p class="text-lg mb-8">{description}</p>
        <a href={buttonLink} class="inline-block border-2 border-purple-600 text-purple-600 hover:bg-purple-600 hover:text-white font-medium py-3 px-8 rounded-full transition-colors">
          {buttonText}
        </a>
      </div>
      <div class="md:w-1/2">
        <img src={image || "/placeholder.svg"} alt={title} class="rounded-lg shadow-lg w-full" />
      </div>
    </div>
  </div>
</section>