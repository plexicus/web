---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
}

const { title, description, imageUrl } = Astro.props;
---

<div class="relative h-[500px] md:h-[600px]">
  <div
    class="absolute inset-0  flex items-center"
    style="background:radial-gradient(circle at right, #000000 0%, #1a1a1a 40%, #4a0ba3 70%, #8220ff 100%);box-shadow:inset 0 0 100px rgba(0,0,0,0.3)"
  >
    <div class="container mx-auto px-4 md:px-6">
      <div
        class="grid gap-6 lg:grid-cols-2 lg:gap-12 items-center pt-16 md:pt-20 lg:pt-24"
      >
        <div class="space-y-4 relative z-10">
          <h1 class="text-2xl font-bold tracking-tighter text-white sm:text-2xl md:text-4xl">{title}</h1>
          <p class="max-w-[600px] text-white/90 md:text-xl text-sm">{description}</p>
        </div>
        <div class="hidden md:flex">
          <img src={imageUrl}  />
        </div>
      </div>
    </div>
  </div>
</div>
