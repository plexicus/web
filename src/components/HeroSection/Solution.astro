---
interface Props {
  title: string;
  description: string;
  backgroundImage: string;
}

const { title, description, backgroundImage } = Astro.props;
---

<div class="relative">
  <img 
    src={backgroundImage || "/placeholder.svg"} 
    alt={title} 
    class="w-full h-[500px] object-cover"
  />
  <div class="absolute inset-0 bg-gradient-to-r from-purple-900/70 to-purple-600/40 flex items-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">{title}</h1>
      <p class="text-xl text-white max-w-2xl">{description}</p>
    </div>
  </div>
</div>